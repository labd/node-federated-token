{
	"name": "federated-token",
	"version": "0.0.0",
	"author": "Lab Digital <opensource@labdigital.nl>",
	"description": "Federate JWT tokens between Apollo servers",
	"keywords": [
		"authentication",
		"graphql"
	],
	"private": "true",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "pnpm turbo build",
		"deps": "syncpack list-mismatches",
		"deps:fix": "syncpack fix-mismatches && pnpm dedupe && pnpm install",
		"format": "biome format --fix",
		"lint": "biome check",
		"publish:ci": "pnpm build && pnpm changeset publish",
		"publish:version": "pnpm changeset version && pnpm format",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"tsc": "turbo tsc"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@changesets/cli": "2.29.8",
		"@vitest/coverage-v8": "4.0.14",
		"syncpack": "13.0.4",
		"turbo": "2.6.1",
		"vitest": "4.0.14"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"module": "./dist/index.mjs",
	"packageManager": "pnpm@9.2.0",
	"repository": "labd/node-federated-token",
	"syncpack": {
		"dependencyTypes": [
			"dev",
			"prod",
			"pnpmOverrides"
		],
		"indent": "\t",
		"sortFirst": [
			"name",
			"version",
			"author",
			"description",
			"keywords",
			"private",
			"license",
			"type",
			"main",
			"types",
			"exports",
			"imports",
			"sideEffects",
			"scripts"
		]
	},
	"workspaces": [
		"packages/*"
	]
}

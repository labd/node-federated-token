{
	"name": "@labdigital/federated-token-react",
	"version": "1.5.0",
	"description": "Federate JWT tokens for React clients",
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"keywords": ["graphql", "authentication", "react"],
	"author": "Lab Digital <opensource@labdigital.nl>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/labd/node-federated-token"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"tsc": "tsc --noEmit"
	},
	"files": ["dist", "src"],
	"dependencies": {
		"jose": "5.4.0",
		"js-cookie": "3.0.5"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/js-cookie": "3.0.6",
		"@types/react": "18.3.3",
		"@vitest/coverage-v8": "1.6.0",
		"node-mocks-http": "^1.16.2",
		"tsup": "^8.3.6",
		"typescript": "^5.7.3",
		"vitest": "1.6.0"
	},
	"peerDependencies": {
		"graphql": ">= 16.6.0",
		"react": ">= 18.0.0"
	}
}

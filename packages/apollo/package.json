{
	"name": "@labdigital/federated-token-apollo",
	"version": "1.0.0-beta.1",
	"description": "Federate JWT tokens between Apollo servers",
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"keywords": [
		"graphql",
		"authentication",
		"apollo"
	],
	"author": "Lab Digital <opensource@labdigital.nl>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/labd/node-federated-token"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"tsc": "tsc --noEmit",
		"format": "eslint src --fix && prettier --write .",
		"lint": "eslint src && prettier --check ."
	},
	"files": [
		"dist",
		"src"
	],
	"dependencies": {
		"@labdigital/federated-token": "workspace:*"
	},
	"devDependencies": {
		"@apollo/gateway": "^2.9.3",
		"@apollo/server": "^4.11.0",
		"@apollo/server-gateway-interface": "1.1.1",
		"@types/express": "^4.17.21",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@vitest/coverage-v8": "1.6.0",
		"eslint": "^8.57.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"node-mocks-http": "^1.16.1",
		"prettier": "^3.3.3",
		"tsup": "^8.3.0",
		"typescript": "^5.6.3",
		"vitest": "1.6.0"
	},
	"peerDependencies": {
		"@apollo/gateway": ">= 2.4",
		"@apollo/server": ">= 4.5",
		"graphql": ">= 16.6.0"
	}
}

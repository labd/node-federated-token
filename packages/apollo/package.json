{
	"name": "@labdigital/federated-token-apollo",
	"version": "1.7.0",
	"author": "Lab Digital <opensource@labdigital.nl>",
	"description": "Federate JWT tokens between Apollo servers",
	"keywords": ["apollo", "authentication", "graphql"],
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"tsc": "tsc --noEmit"
	},
	"dependencies": {
		"@labdigital/federated-token": "workspace:*"
	},
	"devDependencies": {
		"@apollo/gateway": "^2.9.3",
		"@apollo/server": "^4.11.0",
		"@apollo/server-gateway-interface": "1.1.1",
		"@types/express": "^4.17.21",
		"@vitest/coverage-v8": "1.6.0",
		"node-mocks-http": "^1.16.1",
		"tsup": "^8.3.0",
		"typescript": "^5.8.2",
		"vitest": "1.6.0"
	},
	"files": ["dist", "src"],
	"module": "./dist/index.js",
	"peerDependencies": {
		"@apollo/gateway": ">= 2.4",
		"@apollo/server": ">= 4.5",
		"graphql": ">= 16.6.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": "labd/node-federated-token"
}

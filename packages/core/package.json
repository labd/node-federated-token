{
	"name": "@labdigital/federated-token",
	"version": "2.2.0-beta.0",
	"author": "Lab Digital <opensource@labdigital.nl>",
	"description": "Federate JWT tokens between Apollo servers",
	"keywords": [
		"authentication",
		"graphql"
	],
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./tokensource": {
			"types": "./dist/tokensource/index.d.ts",
			"import": "./dist/tokensource/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"tsc": "tsc --noEmit"
	},
	"dependencies": {
		"@types/node": "^24.6.0",
		"jose": "6.1.0",
		"node-mock-http": "1.0.3"
	},
	"devDependencies": {
		"@types/cookie": "1.0.0",
		"@types/express": "5.0.3",
		"@vitest/coverage-v8": "3.2.4",
		"cookie": "1.0.2",
		"node-mocks-http": "1.17.2",
		"tsup": "8.5.0",
		"typescript": "5.9.2",
		"vitest": "3.2.4"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"files": [
		"dist",
		"src"
	],
	"module": "./dist/index.js",
	"peerDependencies": {
		"graphql": ">= 16.6.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": "labd/node-federated-token"
}

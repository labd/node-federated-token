{
	"name": "@labdigital/federated-token",
	"version": "2.0.0",
	"author": "Lab Digital <opensource@labdigital.nl>",
	"description": "Federate JWT tokens between Apollo servers",
	"keywords": ["authentication", "graphql"],
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./tokensource": {
			"types": "./dist/tokensource/index.d.ts",
			"import": "./dist/tokensource/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"tsc": "tsc --noEmit"
	},
	"dependencies": {
		"jose": "6.0.11",
		"node-mock-http": "^1.0.0"
	},
	"devDependencies": {
		"@types/cookie": "1.0.0",
		"@types/express": "^4.17.21",
		"@vitest/coverage-v8": "1.6.0",
		"cookie": "1.0.2",
		"node-mocks-http": "^1.16.1",
		"tsup": "^8.3.0",
		"typescript": "^5.8.2",
		"vitest": "3.1.4"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"files": ["dist", "src"],
	"module": "./dist/index.js",
	"peerDependencies": {
		"graphql": ">= 16.6.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": "labd/node-federated-token"
}
